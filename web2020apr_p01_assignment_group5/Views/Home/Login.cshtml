@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Log In</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="icon" type="image/x-icon" href="~/images/logo.png">
    <script>addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }</script>
    <!-- //Meta-Tags -->
    <!-- css files -->
    <link href="~/css/loginmenu.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- //css files -->
    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- //google fonts -->
    

</head>

<body>

    <div class="container">
        <div class="left">
            <div class="header">
                <img class="animation a1" src="~/images/snap.png" alt="" />
                <h2 class="animation a1">Welcome Back</h2>
                <h4 class="animation a2">Enter your details to login.</h4>
            </div>
            <form id="loginform" action="~/Home/Login" method="post" class="form">
                <input type="email" name="txtLoginEmail" id="txtLoginEmail" required class="form-field animation a3" placeholder="Email Address">
                <input type="password" name="txtPassword" id="txtPassword" required class="form-field animation a4" placeholder="Password">
                <p class="animation a5"><a href="#">Forgot Password</a></p>
                <span style="color:red;">@TempData["Message"]</span>
                <button class="animation a6" type="submit">LOGIN</button>
            </form>
            <p class="animation a6">Dont have an account? <a href="#">Sign up here</a></p>
        </div>

        <div class="right"></div>

    </div>

    <input type="hidden" id="recordFailLogin" data-value="@TempData["Action"]"/>
    <script type="text/javascript" src="~/js/activatekeyframe.js"></script>

</body>
</html>