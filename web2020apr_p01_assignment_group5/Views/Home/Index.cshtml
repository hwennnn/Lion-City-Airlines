@model web2020apr_p01_assignment_group5.Models.BookingModel
@{
    var role = Context.Session.GetString("Role");
    if (role == "Customer")
    {
        Layout = "_CustomerMenu";
    }
    else if (role == "Admin")
    {
        Layout = "_AdminMenu";
    }
    else
    {
        Layout = "_CommonMenu";
    }
}

@{
    ViewData["Title"] = "Home";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css">
    <link rel="stylesheet" href="~/css/material-design-iconic-font.min.css">
</head>

<body>
    <div class="container text-center">
        <form id="booking-form" class="booking-form" method="POST">
            <h2 id="welcome_title">Hi, Where would you like to go?</h2>
            <br />
            <div class="form-group">

                <div class="form-destination">
                    <label>Departure</label>
                    <select 
                            asp-items="@ViewData["DepartureList"] as List<SelectListItem>">
                    </select>
                </div>

                <div class="form-destination">
                    <label>Arrival</label>
                    <select
                            asp-items="@ViewData["ArrivalList"] as List<SelectListItem>">
                    </select>
                </div>

                <div class="form-date-from form-icon">
                    <label>Departure Date</label>
                    <input type="date" id="date_from" class="date_from" placeholder="Pick a date" />
                </div>

                <div class="form-date-to form-icon">
                    <label>Arrival Date</label>
                    <input type="date" id="date_to" class="date_to" placeholder="Pick a date" />
                </div>
                <br />

            </div>

            <div class="form-submit">
                <input type="submit" id="submit" class="submit" value="Search" />
            </div>
        </form>
    </div>

    <script type="text/javascript">
        document.getElementById("common_navbar").classList.remove("fixed-top");
    </script>
    <script>
        var message = @Html.Raw(Json.Serialize(TempData["alert"]));

        if (message) {
            alert(message);
        }
    </script>
</body>
