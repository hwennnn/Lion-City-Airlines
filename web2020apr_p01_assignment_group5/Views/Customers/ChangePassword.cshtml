    Layout = "_CustomerMenu";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>HomePage</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <script src="#"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>

<body>
    <br>
    <form>
        <div class="container">
            <div class="row content">
                <div class="col">
                    <h3>Change Password</h3>
                    <hr>
                    <label for="current-psw"><b>Current Password:</b></label>
                    <input type="password" id="current-psw" name="current-psw" maxlength="255" required><br>
                    <label for="new-psw"><b>New Password:</b></label>
                    <input type="password" id="new-psw" name="new-psw" maxlength="255" required><br>
                    <label for="confirm-new-psw"><b>Confirm New Password:</b></label>
                    <input type="password" id="confirm-new-psw" name="confirm-new-psw" maxlength="255" required><br>
                    <input class="btn" type="submit" value="Submit">
                </div>
            </div>
        </div>
    </form>
</body>

</html>