@model web2020apr_p01_assignment_group5.Models.Customer

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Create Customer Profile</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
</head>

<body>
    <div class="container-contact100" style="margin-top:56px;">

        <div class="wrap-contact100">
            <form asp-action="CreateCustomerProfile" class="contact100-form validate-form">
                <span class="contact100-form-title">
                    Create Customer Profile
                </span>

                <div class="wrap-input100 validate-input bg1" data-validate="Please Type Your Full Name">
                    <span asp-validation-for="CustomerName" class="label-input100">Full Name *</span>
                    <input class="input100" asp-for="CustomerName" placeholder="Enter Your Full Name">
                </div>

                <div class="wrap-input100 validate-input bg1">
                    <span asp-validation-for="Nationality" class="label-input100">Nationality *</span>
                    <input class="input100" asp-for="Nationality" placeholder="Enter Your Nationality">
                    @*<div>
                            <select class="js-select2" asp-for="Nationality"
                                    asp-items="@ViewData["NationalityList"] as List<SelectListItem>">
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>*@
                </div>

                <div class="wrap-input100 validate-input bg1" data-validate="Please Select Date Of Birth">
                    <span asp-validation-for="BirthDate" class="label-input100">Date Of Birth *</span>
                    <input class="input100" asp-for="BirthDate" placeholder="Select Your Date Of Birth">
                </div>

                <div class="wrap-input100 validate-input bg1" data-validate="Enter Your Email (hello@gmail.com)">
                    <span class="label-input100">Email *</span>
                    <input class="input100" asp-for="EmailAddr" placeholder="Enter Your Email">
                    <span asp-validation-for="EmailAddr"
                          class="text-danger"></span>
                </div>

                <div class="wrap-input100 validate-input bg1" data-validate="Please Enter A Valid Contact Number: 98765432">
                    <span asp-validation-for="TelNo" class="label-input100">Contact Number</span>
                    <input class="input100" asp-for="TelNo" type="tel" pattern="[8-9]{1}[0-9]{7}" placeholder="Enter Your Contact Number">
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn" type="submit">
                        <span>
                            Register
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>



    <!--===============================================================================================-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script>
        $(".js-select2").each(function () {
            $(this).select2({
                minimumResultsForSearch: 20,
                dropdownParent: $(this).next('.dropDownSelect2')
            });

            $(".js-select2").each(function () {
                $(this).on('select2:close', function (e) {
                    if ($(this).val() == "Please select...") {
                        $('.js-show-service').slideUp();
                    } else {
                        $('.js-show-service').slideUp();
                        $('.js-show-service').slideDown();
                    }
                });
            });
            document.getElementById("body_container").classList.remove("container-fluid");
        })</script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
    <script>
        var message = @Html.Raw(Json.Serialize(TempData["alert"]));

        if (message) {
            alert(message);
        }
    </script>
</body>

</html>