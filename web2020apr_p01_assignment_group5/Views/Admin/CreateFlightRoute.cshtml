@model web2020apr_p01_assignment_group5.Models.FlightRoute

@{
    Layout = "_AdminMenu";
    ViewData["Title"] = "Create Flight Route Record";
}

<link rel="stylesheet" href="~/css/createflightroute.css">

<body>
    <div class="container text-center">
        <div class="row content">
            <h1 class="title">Create Flight Route Record</h1>
            <hr />
        </div>
        <form asp-action="CreateFlightRoute">
            <div class="row">
                <label asp-for="DepartureCity"></label>
                <input type="text" asp-for="DepartureCity" />
            </div>
            <div class="row">
                <label asp-for="DepartureCountry"></label>
                <input type="text" asp-for="DepartureCountry" />
            </div>
            <div class="row">
                <label asp-for="ArrivalCity"></label>
                <input type="text" asp-for="ArrivalCity" />
            </div>
            <div class="row">
                <label asp-for="ArrivalCountry"></label>
                <input type="text" asp-for="ArrivalCountry" />
            </div>
            <div class="row">
                <label asp-for="FlightDuration"></label>
                <input type="number" asp-for="FlightDuration" />
            </div>
            <div class="row">
                <input type="submit" value="Create">
            </div>
        </form>
    </div>
</body>


