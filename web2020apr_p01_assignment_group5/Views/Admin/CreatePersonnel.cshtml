@{
    Layout = "_AdminMenu";
    ViewData["Title"] = "Create Flight Personnel Record";
}

@model web2020apr_p01_assignment_group5.Models.Staff

<link rel="stylesheet" href="~/css/createpersonnels.css">

<body>
    <div class="container text-center">
        <div class="row content titleholder">
            <h1 class="title">Create Flight Personnel Record</h1>
            <hr />
        </div>

        <form asp-action="CreatePersonnel">

            <div class="row formcontent justify-content-center">
                <label class="indicate" asp-for="StaffName"></label>
                <input class="formfield" type="text" asp-for="StaffName">
            </div>

            <div class="row formcontent justify-content-center">
                <label class="indicate" asp-for="Gender"></label>
                <select class="formfield" asp-for="Gender" 
                       asp-items="@ViewData["GenderList"] as List<SelectListItem>">
                </select>
            </div>

            <div class="row formcontent justify-content-center">
                <label class="indicate" asp-for="DateEmployed"></label>
                <input class="formfield" asp-for="DateEmployed">
            </div>

            <div class="row formcontent justify-content-center">
                <label class="indicate" asp-for="Vocation"></label>
                <select class="formfield" type="text" asp-for="Vocation"
                       asp-items="@ViewData["VocationList"] as List<SelectListItem>">
                </select>
            </div>

            <div class="row formcontent justify-content-center">
                <label class="indicate" asp-for="Email"></label>
                <input class="formfield" type="text" asp-for="Email">
            </div>

            <div class="row content justify-content-center">
                <input type="submit" value="Create">
            </div>
            

        </form>
    </div>
</body>