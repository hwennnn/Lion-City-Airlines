@model web2020apr_p01_assignment_group5.Models.Staff

@{
    Layout = "_AdminMenu";
    ViewData["Title"] = "Update Flight Personnel Status";
}

<link rel="stylesheet" href="~/css/update.css" />

<body>
    <div class="container text-center">

        <div class="row content">
            <h1 class="title">Update Flight Personnel Status</h1>
            <hr />
        </div>

        <form asp-action="UpdatePersonnelStatus" method="post">
            <fieldset class="FormContent">

                @{
                    var text = "";
                    if (Model.Status.Equals("Active"))
                    {
                        text = "Are you sure to update the status to inactive?";
                    }
                    else
                    {
                        text = "Are you sure to update the status to active?";
                    }
                }

                <legend>@text</legend>

                <div class="form-group row">
                    <label asp-for="StaffId"
                           class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 col-md-5">
                        <input asp-for="StaffId" readonly
                               class="form-control-plaintext" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="StaffName"
                           class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 col-md-5">
                        <input asp-for="StaffName" readonly
                               class="form-control-plaintext" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Status"
                           class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9 col-md-5">
                        <input asp-for="Status" readonly
                               class="form-control-plaintext" />
                    </div>
                </div>

                <div>
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>

                <br />

                <div>
                    <a asp-action="ViewPersonnels">Back to List</a>
                </div>

            </fieldset>
        </form>

    </div>

    <script>
        var message = @Html.Raw(Json.Serialize(TempData["alert"]));

        if (message) {
            alert(message);
        }
    </script>

</body>

